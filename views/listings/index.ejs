<% layout("/layouts/boilerplate") %>
<style>
    .filter {
        position: relative;
        margin-bottom: 1.5rem;
        cursor: pointer;
        opacity: 0.9;
    }

    .filter::after {
        content: '';
        display: block;
        position: absolute;
        bottom: 0;
        left: 0%;
        width: 0%;
        height: 2px;
        background-color: #ff5e5e;
        border-radius: 1px;
        transition: width 0.3s ease;
    }

    .filter:hover {
  opacity: 1.2;
}

    .filter:hover::after {
    width: 100%;
    }

    .fa-icon{
      font-size: 15px;
    }

    .fa-text {
        font-size: 15px;
    }

.tax-info{
  display: none;
}

</style>
